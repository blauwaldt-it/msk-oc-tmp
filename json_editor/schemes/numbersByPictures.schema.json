{
	"title": "Zahlenbilder",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___defs": {
			"title": "Zahlenbilder",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"x": {
					"title": "X-Koordinate",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 2
					},
					"default": 5
				},
				"y": {
					"title": "Y-Koordinate",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 2
					},
					"default": 10
				},
				"width": {
					"title": "Breite",
					"type": "integer",
					"options": {
						"grid_columns": 2,
						"grid_break": true,
						"infoText": "Wenn negativ: relativ zu Screen-Breite"
					},
					"default": -50
				},
				"readonly": {
					"title": "Daten unveränderbar (nicht interaktiv)",
					"type": "boolean",
					"format": "checkbox",
					"options": {
						"grid_columns": 6,
						"grid_break": true
					}
				},

				"data": {
					"title": "Vorbelegung (je Spalte)",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true
					},
					"items": {
						"title": "Spalte",
						"type": "object",
						"properties": {
							"c": {
								"title": "Anzahl Würfel",
								"type": "integer",
								"minimum": 0,
								"maximum": 1
							},
							"r": {
								"title": "Anzahl Rechtecke",
								"type": "integer",
								"minimum": 0,
								"maximum": 1
							},
							"b": {
								"title": "Anzahl Balken",
								"type": "integer",
								"minimum": 0,
								"maximum": 10
							},
							"d": {
								"title": "Anzahl Punkte",
								"type": "integer",
								"minimum": 0,
								"maximum": 100
							}
						}
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"options": {
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"__jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type": "string",
							"default": "numbersByPictures"
						},
						"___version": {
							"type": "number",
							"default": 0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"description": "Erzeugt werden 'V_&lt;pref&gt;_Input_[T|H|Z|E]' und 'S_&lt;pref&gt;_Status'",
					"type": "string",
					"default": "Aufg1"
				},

				"scoringVals": {
					"title": "Scoring Werte",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"infoText": "Bedingung: == ist gleich, logische Verknüpfung mehrerer Bedingungen möglich (||=oder, &&=und)"
					},
					"items": {
						"title": "Scoring Wert",
						"type": "object",
						"properties": {
							"val": {
								"title": "Scoring-Wert",
								"type": "integer"
							},
							"condition": {
								"title": "Bedingung (VarNamen in [] setzen)",
								"type": "string"
							}
						}
					}
				}

			}
		}
	}
}