{
	"title": "Markierbare Rechtecke",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___rects": {
			"title": "Rechtecke",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"x": {
					"title": "X-Offset",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 2
					},
					"default": 2
				},
				"y": {
					"title": "Y-Offset",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 2,
						"grid_break": true
					},
					"default": 2
				},
				"width": {
					"title": "Breite Felder",
					"type": "integer",
					"options": {
						"grid_columns": 2
					},
					"default": 50
				},
				"height": {
					"title": "Höhe Felder",
					"type": "integer",
					"options": {
						"grid_columns": 2,
						"grid_break": true
					},
					"default": 30
				},
				"strokeWidth": {
					"title": "Strichdicke",
					"type": "integer",
					"default": 3,
					"options": {
						"grid_columns": 2
					}
				},
				"markColor": {
					"title": "Markierfarbe",
					"type": "string",
					"format": "color",
					"default": "#0000ff",
					"options": {
						"grid_columns": 2,
						"grid_break": true
					}
				},

				"readonly": {
					"title": "Komplett unveränderbar",
					"type": "boolean",
					"format": "checkbox",
					"default": false,
					"options": {
						"grid_columns": 6,
						"grid_break": true
					}
				},

				"___type": {
					"title": "Typ",
					"type": "string",
					"enum": [ "fix", "free" ],
					"options": {
						"enum_titles": [ "Festes Array", "Freie Rechtecke" ],
						"grid_columns": 3,
						"grid_break": true
					},
					"default": "fix"
				},

				"rectArray": {
					"title": "Spezifikation Array",
					"type": "object",
					"format": "grid-strict",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 8,
						"dependencies": {
							"___type": "fix"
						}
					},
					"properties": {
						"cols": {
							"title": "Spalten",
							"type": "integer",
							"minimum": 1,
							"default": 5,
							"options": {
								"grid_columns": 3
							}
						},
						"rows": {
							"title": "Zeilen",
							"type": "integer",
							"minimum": 1,
							"default": 2,
							"options": {
								"grid_columns": 3,
								"grid_break": true
							}
						},
						"marked": {
							"title": "Markierte FeldNr",
							"type": "string",
							"pattern": "^ *[0-9]+ *(- *[0-9]+)? *(, *[0-9]+ *(- *[0-9]+)? *)*$",
							"options": {
								"grid_columns": 10,
								"grid_break": true,
								"infoText": "z.B. 3,4,5-8,10-12"
							}
						},
						"fixed": {
							"title": "Unveränderbare FeldNr",
							"type": "string",
							"options": {
								"grid_columns": 10,
								"dependencies": {
									"root.___rects.readonly": false
								},
								"infoText": "z.B. 3,4,5-8,10-12"
							}
						}
					}
				},

				"rects": {
					"title": "Rechteck-Definitionen",
					"type": "array",
					"uniqueItems": true,
					"format": "table",
					"options": {
						"titleHidden": true,
						"disable_collapse": true,
						"grid_columns": 10,
						"grid_break": true,
						"dependencies": {
							"___type": "free"
						}
					},
					"items": {
						"title": "Rechteck",
						"type": "object",
						"properties": {
							"x": {
								"title": "X",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"y": {
								"title": "Y",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"w": {
								"title": "Breite",
								"type": "integer",
								"minimum": 1,
								"default": 1
							},
							"h": {
								"title": "Höhe",
								"type": "integer",
								"minimum": 1,
								"default": 1
							},
							"marked": {
								"title": "Mark.",
								"type": "boolean",
								"format": "checkbox",
								"default": false
							},
							"fixed": {
								"title": "Fest",
								"type": "boolean",
								"format": "checkbox",
								"default": false,
								"dependencies": {
									"root.___rects.readonly": false
								}
							}
						}
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"options": {
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"__jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type":"string",
							"default":"rectArrayMarkable"
						},
						"___version": {
							"type":"number",
							"default":0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"description": "Erzeugt werden 'V_&lt;pref&gt;_MarkCnt' und 'S_&lt;pref&gt;_Status'",
					"type": "string",
					"default": "Aufg1"
				},

				"scoringVals": {
					"title": "Scoring Werte",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"infoText": "Bedingung: == ist gleich, logische Verknüpfung mehrerer Bedingungen möglich (||=oder, &&=und)"
					},
					"items": {
						"title": "Scoring Wert",
						"type": "object",
						"properties": {
							"val": {
								"title": "Scoring-Wert",
								"type": "integer"
							},
							"condition": {
								"title": "Bedingung (VarNamen in [] setzen)",
								"type": "string"
							}
						}
					}
				}

			}
		}
	}
}
