{
	"title": "Eingabezeile mit Buttons",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___options": {
			"title": "Erscheinungsbild",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"toolbarCellWidth": {
					"title": "Höhe Toolbar",
					"type": "integer",
					"minimum": 0,
					"default": 27,
					"options": {
						"grid_columns": 3,
						"grid_break": true
					}
				},
				"inputHeight": {
					"title": "Höhe Eingabezeile",
					"type": "integer",
					"minimum": 0,
					"default": 25,
					"options": {
						"grid_columns": 3
					}
				},
				"maxlength": {
					"title": "Eingabe max. Zeichen",
					"type": "integer",
					"minimum": 0,
					"default": 40,
					"options": {
						"grid_columns": 3,
						"grid_break": true
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"__jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type":"string",
							"default":"inputInserts"
						},
						"___version": {
							"type":"number",
							"default":0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"type": "string",
					"default": "Aufg1"
				},

				"scoringPattern": {
					"title": "Scoring Muster",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"infoText": "Term: Kann optionales (=[]) Ergebnis enthalten | OP-Perm: Permutation der Operanden | Mehr erlaubt: Extra-Text vor/nach erlaubt wenn kein Ergebnis angegeben"
					},
					"items": {
						"title": "Scoring Muster",
						"type": "object",
						"properties": {
							"name": {
								"title": "VarName",
								"type": "string",
								"pattern": "[a-zA-Z0-9_]+"
							},
							"pattern": {
								"title": "Term (z.B. 3+4+5[=12])",
								"type": "string",
								"pattern": "^ *\\d+([,.]\\d+)? *([\\-+*\\/]) *\\d+([,.]\\d+)? *(\\2 *\\d+([,.]\\d+)? *)*(\\[ *= *\\d+([,.]\\d+)? *\\] *|= *\\d+([,.]\\d+)? *)?$"
							},
							"perm": {
								"title": "OP-Perm",
								"type": "boolean",
								"format": "checkbox"
							},
							"add": {
								"title": "Mehr erlaubt",
								"type": "boolean",
								"format": "checkbox"
							}
						}
					}
				},

				"scoringVals": {
					"title": "Scoring Werte",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"infoText": "Bedingung: == ist gleich, logische Verknüpfung mehrerer Bedingungen möglich (||=oder, &&=und)"
					},
					"items": {
						"title": "Scoring Wert",
						"type": "object",
						"properties": {
							"val": {
								"title": "Scoring-Wert",
								"type": "integer"
							},
							"condition": {
								"title": "Bedingung (VarNamen in [] setzen)",
								"type": "string"
							}
						}
					}
				}
			}

		}

	}
}
